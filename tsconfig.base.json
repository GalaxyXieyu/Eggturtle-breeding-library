{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@eggturtle/shared": ["packages/shared/src"],
      "@eggturtle/shared/*": ["packages/shared/src/*"]
    }
  }
}
